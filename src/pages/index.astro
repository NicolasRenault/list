---
import Layout from "@layouts/MainLayout.astro";
import links from "@data/links.json";
import ProjectCard from "@components/ProjectCard.astro";
---
<Layout>
	<main>
		<div id="header">
			<nr-logo size="xl" link animated></nr-logo>
			<h1>Nicolas Renault</h1>
			<h2>Find all my links here.</h2>
		</div>
		<div id="links">
			{
				links.map((link) => 
					<ProjectCard
						title={link.title}
						description={link.description}
						icon={link.icon}
						url={link.url}
					/>
				)
			}
		</div>
		<footer>
			<p>This is an open source project that you can find <a href="https://github.com/NicolasRenault/links" target="_blank">here</a>.</p>
			<nr-logo size="xs" animated></nr-logo>
		</footer>
	</main>
</Layout>

<style lang="scss">
	main {
		#header {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin: 5vh 0;

			nr-logo {
				color: var(--secondary-rgb);
				filter: drop-shadow(0 0 1.85rem var(--secondary-rgb));
				margin-bottom: 10px;
			}

			h1 {
				font-size: 3rem;
			}

			h2 {
				font-size: 1.5rem;
				font-weight: 500;
				margin-top: 0;
			}
		}

		#links {
			min-width: 580px;
		}

		footer {
			display: flex;
			flex-direction: column;
			align-items: center;

			margin-top: 10vh;
			margin: 5vw;
			
			color: var(--text-dark-gray-rgb);

			p {
				font-size: 1.2rem;
				text-align: center;
				a {
					color: var(--secondary-dark-rgb);
				}
			}
		}
	}

	@media (max-width: 599px) {
		main
		{
			width: 100%;
			#links {
				min-width: inherit;
				width: 100%;
			}
		}
	}

	@media (max-width: 519px) {
		main
		{
			#header {
				h1 {
					font-size: 2.5rem;
				}

				h2 {
					font-size: 1.3rem;
				}
			}
		}
	}

</style>